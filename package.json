{
    "name": "vscode-svg-previewer",
    "displayName": "SVG Previewer",
    "description": "Show SVG preview to the side panel",
    "version": "0.7.0",
    "publisher": "vitaliymaz",
    "repository": "https://github.com/vitaliymaz/vscode-svg-previewer",
    "icon": "logo.png",
    "engines": {
        "vscode": "^1.52.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:xml",
        "onLanguage:svg",
        "onWebviewPanel:svg-preview",
        "onCustomEditor:svgPreviewer.customEditor",
        "onCommand:vscode.openWith",
        "onCommand:svg.showPreview",
        "onCommand:svg.showPreviewToSide",
        "onCommand:svg.showSource",
        "workspaceContains:**/*.svg"
    ],
    "main": "./out/extension",
    "contributes": {
        "customEditors": [
            {
                "viewType": "svgPreviewer.customEditor",
                "displayName": "Image Viewer",
                "selector": [
                    {
                        "filenamePattern": "*.svg"
                    }
                ],
                "priority": "option"
            }
        ],
        "commands": [
            {
                "command": "svg.showPreview",
                "title": "%svg.preview.title%",
                "category": "Svg"
            },
            {
                "command": "svg.showPreviewToSide",
                "title": "%svg.previewSide.title%",
                "category": "Svg",
                "icon": {
                    "light": "./media/images/preview-right-light.svg",
                    "dark": "./media/images/preview-right-dark.svg"
                }
            },
            {
                "command": "svg.showSource",
                "title": "%svg.showSource.title%",
                "category": "Svg",
                "icon": {
                    "light": "./media/images/view-source-light.svg",
                    "dark": "./media/images/view-source-dark.svg"
                }
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "svg.showPreviewToSide",
                    "when": "resourceExtname == .svg",
                    "alt": "svg.showPreviewToSide",
                    "group": "navigation"
                },
                {
                    "command": "svg.showSource",
                    "when": "svgPreviewFocus",
                    "alt": "svg.showSource",
                    "group": "navigation"
                }
            ],
            "commandPalette": [
                {
                    "command": "svg.showPreview",
                    "when": "resourceExtname == .svg",
                    "group": "navigation"
                },
                {
                    "command": "svg.showPreviewToSide",
                    "when": "resourceExtname == .svg",
                    "group": "navigation"
                },
                {
                    "command": "svg.showSource",
                    "when": "svgPreviewFocus",
                    "group": "navigation"
                }
            ],
            "explorer/context": [
                {
                    "command": "svg.showPreview",
                    "group": "navigation",
                    "when": "resourceExtname == .svg"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "SVG Previewer",
            "properties": {
                "svg.preview.autoOpen": {
                    "type": "boolean",
                    "default": false,
                    "description": "%svg.autoOpenPreview.dec%"
                },
                "svg.preview.boundingBox": {
                    "type": "boolean",
                    "default": false,
                    "description": "%svg.showSvgBoundingBox.dec%"
                },
                "svg.preview.transparencyGrid": {
                    "type": "boolean",
                    "default": false,
                    "description": "%svg.showTransparencyGrid.dec%"
                }
            }
        },
        "keybindings": [
            {
                "command": "svg.showPreview",
                "key": "shift+ctrl+v",
                "mac": "shift+cmd+v",
                "when": "resourceExtname == .svg"
            },
            {
                "command": "svg.showPreviewToSide",
                "key": "ctrl+k v",
                "mac": "cmd+k v",
                "when": "resourceExtname == .svg"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "rm -rf out && tsc -p ./ && webpack",
        "test": "npm run compile && echo 'no tests yet'",
        "lint": "standardx */**/*.ts */**/*.tsx",
        "lint:fix": "standardx --fix */**/*.ts */**/*.tsx"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.10.14",
        "@types/vscode": "^1.52.0",
        "@typescript-eslint/eslint-plugin": "^3.10.1",
        "@typescript-eslint/parser": "^3.10.1",
        "standardx": "^5.0.0",
        "ts-loader": "^5.4.5",
        "typescript": "^3.9.7",
        "vscode-test": "^1.4.1",
        "webpack": "^4.46.0",
        "webpack-cli": "^3.3.12"
    },
    "dependencies": {
        "preact": "^10.5.10",
        "redux-zero": "^5.1.7",
        "vscode-extension-telemetry": "^0.1.6",
        "vscode-nls": "^4.1.2"
    },
    "eslintConfig": {
        "settings": {
            "react": {
                "pragma": "h"
            }
        },
        "rules": {
            "no-unused-vars": "off",
            "@typescript-eslint/no-unused-vars": "error",
            "no-useless-constructor": "off",
            "@typescript-eslint/no-useless-constructor": [
                "error"
            ],
            "indent": "off",
            "@typescript-eslint/indent": [
                "error",
                2,
                {
                    "SwitchCase": 1,
                    "VariableDeclarator": 1,
                    "outerIIFEBody": 1,
                    "MemberExpression": 1,
                    "FunctionDeclaration": {
                        "parameters": 1,
                        "body": 1
                    },
                    "FunctionExpression": {
                        "parameters": 1,
                        "body": 1
                    },
                    "CallExpression": {
                        "arguments": 1
                    },
                    "ArrayExpression": 1,
                    "ObjectExpression": 1,
                    "ImportDeclaration": 1,
                    "flatTernaryExpressions": false,
                    "ignoreComments": false,
                    "ignoredNodes": [
                        "TemplateLiteral *"
                    ]
                }
            ]
        }
    },
    "standardx": {
        "ignore": [
            "node_modules/"
        ],
        "extensions": [],
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "@typescript-eslint/eslint-plugin"
        ]
    }
}
